{
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  "eslint.validate": [
    {
      "language": "javascript",
      "autoFix": true
    },
    {
      "language": "javascriptreact",
      "autoFix": true
    },
    {
      "language": "typescript",
      "autoFix": true
    },
    {
      "language": "typescriptreact",
      "autoFix": true
    },
    {
      "language": "vue",
      "autoFix": true
    }
  ],
  "vetur.validation.template": false,
  "cSpell.words": [
    "CSRF",
    "Gitalk",
    "Gitment",
    "Preact",
    "bitbucket",
    "deletable",
    "gitea",
    "gitee",
    "github",
    "gitlab",
    "gridsome",
    "nuxt",
    "pagelen",
    "reactable",
    "repos",
    "styl",
    "thumbsdown",
    "thumbsup",
    "vssue",
    "vuepress"
  ]
}
