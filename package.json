{
  "private": true,
  "workspaces": [
    "packages/@vssue/*",
    "packages/vssue",
    "packages/docs"
  ],
  "scripts": {
    "dev": "yarn workspace vssue dev",
    "staging": "yarn workspace vssue staging",
    "build": "lerna run build --stream --ignore docs",
    "dev-docs": "yarn workspace docs dev",
    "build-docs": "yarn workspace docs build",
    "lint": "eslint --ext .js,.ts,.vue packages/",
    "test": "jest",
    "release": "node scripts/release.js",
    "postinstall": "lerna run build --stream --ignore docs --ignore vssue"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "23.x",
    "@vue/eslint-config-standard": "^4.0.0",
    "@vue/eslint-config-typescript": "^3.2.0",
    "conventional-changelog-cli": "^2.0.11",
    "eslint": "^5.14.1",
    "eslint-plugin-vue": "^5.2.2",
    "execa": "^1.0.0",
    "husky": "^1.3.1",
    "jest": "23.x",
    "lerna": "^3.13.0",
    "lint-staged": "^8.1.4",
    "rimraf": "^2.6.2",
    "ts-jest": "23.x",
    "typescript": "~3.1.1"
  }
}
